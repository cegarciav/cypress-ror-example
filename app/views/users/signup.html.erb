<main id="signup-container" class="user-form-container">
  <%= form_with url: "/users", class: 'user-form', method: :post do |form| %>
    <h1>Create a new account</h1>
    <div class="input-container">
      <%= form.label :email, "Email" %>
      <%= form.text_field :email, placeholder: "Email" %>
    </div>
    <div class="input-container">
      <%= form.label :name, "Name" %>
      <%= form.text_field :name, placeholder: "Name" %>
    </div>
    <div class="input-container">
      <%= form.label :username, "Username" %>
      <%= form.text_field :username, placeholder: "Username" %>
    </div>
    <div class="input-container">
      <%= form.label :password, "Password" %>
      <%= form.password_field :password, placeholder: "Password" %>
    </div>
    <div class="input-container">
      <%= form.label :password2, "Confirm password" %>
      <%= form.password_field :password2, placeholder: "Password" %>
    </div>
    <%= form.submit "Sign Up" %>
    <% if flash[:notice] %>
      <%= content_tag :p, flash[:notice] %>
    <% end %>
    <p>
      If you already have an account, you can
      <a href="/login">
        log in
      </a>
    </p>
  <% end %>
</main>
